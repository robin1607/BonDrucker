<Window x:Class="BonDrucker.mealCombinationEditer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BonDrucker"
        mc:Ignorable="d"
        Title="mealCombinationEditer" Height="362.248" Width="604.323">
    <Grid>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Center" VerticalAlignment="Top" Width="596" Height="298">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Hauptessen" Binding="{Binding Path=mainMealName}" IsReadOnly="True" Width="8*"/>
                <DataGridTextColumn Header="Beilage" Binding="{Binding Path=secondMealName}" IsReadOnly="True" Width="8*"/>
                <DataGridTextColumn Header="Gesamtpreis" Binding="{Binding Path=totalPrice}" IsReadOnly="False" Width="6*"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnCancel" Content="Abbrechen" HorizontalAlignment="Left" Margin="10,301,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btnSave" Content="Speichern" HorizontalAlignment="Left" Margin="486,303,0,0" VerticalAlignment="Top" Width="100" Click="btnSave_Click"/>

    </Grid>
</Window>
