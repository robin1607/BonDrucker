<Window x:Class="BonDrucker.mainMealEditer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BonDrucker"
        mc:Ignorable="d"
        Title="mainMealEditer" Height="464.91" Width="785.23">
    <Grid>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="434" VerticalAlignment="Top" Width="777">
            <TabItem Header="Hauptessen">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="mainMealList" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Grid.Row="1" KeyDown="mealListe_KeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Hauptessen" Binding="{Binding Path=mealName}" IsReadOnly="True" Width="8*"/>
                            <DataGridTextColumn Header="Einzelpreis" Binding="{Binding Path=price}" IsReadOnly="True" Width="2*"/>
                            <DataGridCheckBoxColumn Header="Beilagenfähig" Binding="{Binding Path=insertable, Mode=TwoWay}" IsReadOnly="False" Width="2*"/>
                            <DataGridCheckBoxColumn  Header="Ausverkauft" Binding="{Binding Path=soldOut, Mode=TwoWay}" IsReadOnly="False" Width="2*"/>
                        </DataGrid.Columns>
                        <DataGrid.ItemContainerStyle>
                            <Style TargetType="DataGridRow">
                                <EventSetter Event="MouseDoubleClick" Handler="Row_DoubleClick"/>
                            </Style>
                        </DataGrid.ItemContainerStyle>
                    </DataGrid>
                    <TextBox x:Name="txtBoxMainMeal" HorizontalAlignment="Left" Height="30" Margin="110,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" RenderTransformOrigin="0.558,0.435"/>
                    <TextBox x:Name="txtBoxMainMealSinglePrice" HorizontalAlignment="Left" Height="30" Margin="110,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173"/>
                    <Label x:Name="lbMainMeal" FontSize="15" Content="Hauptessen" HorizontalAlignment="Left" Margin="0,27,0,0" VerticalAlignment="Top" Width="104"/>
                    <Label x:Name="lbInsertable" FontSize="15" Content="Beilagenfähig" HorizontalAlignment="Left" Margin="1,97,0,0" VerticalAlignment="Top" Width="104" RenderTransformOrigin="0.6,1.423"/>
                    <Label x:Name="lbMainMealSinglePrice" FontSize="15" Content="Einzelpreis" HorizontalAlignment="Left" Margin="0,62,0,0" VerticalAlignment="Top" Width="104" RenderTransformOrigin="0.6,1.423"/>
                    <Button x:Name="btnSafeNewMainMeal" Content="Speichern" HorizontalAlignment="Left" Margin="110,136,0,0" VerticalAlignment="Top" Width="173" Height="28" Click="btnSafeNewMainMeal_Click"/>
                    <Button x:Name="btnDeleteMarkedMeal" Content="Auswahl löschen" HorizontalAlignment="Left" Margin="588,136,0,0" VerticalAlignment="Top" Width="173" RenderTransformOrigin="0.32,-0.1" Height="28" Click="btnDeleteMarkedMainMeal_Click"/>
                    <CheckBox x:Name="checkBoxInertable" Content="" HorizontalAlignment="Left" Margin="110,97,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.493,0.069" Width="173" Height="30" UseLayoutRounding="True" VerticalContentAlignment="Center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Beilagen">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <DataGrid x:Name="secondMealList" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Grid.Row="1" KeyDown="mealListe_KeyDown">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Beilage" Binding="{Binding Path=mealName}" Width="8*"/>
                            <DataGridTextColumn Header="Einzelpreis" Binding="{Binding Path=price}" Width="2*"/>
                            <DataGridCheckBoxColumn  Header="Ausverkauft" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBox x:Name="txtBoxSecondMeal" HorizontalAlignment="Left" Height="30" Margin="110,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" RenderTransformOrigin="0.558,0.435"/>
                    <TextBox x:Name="txtBoxSecondMealSinglePrice" HorizontalAlignment="Left" Height="30" Margin="110,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173"/>
                    <Label x:Name="lbSecondMeal" FontSize="15" Content="Beilage" HorizontalAlignment="Left" Margin="0,27,0,0" VerticalAlignment="Top" Width="104"/>
                    <Label x:Name="lbSecondMealSinglePrice" FontSize="15" Content="Einzelpreis" HorizontalAlignment="Left" Margin="0,62,0,0" VerticalAlignment="Top" Width="104" RenderTransformOrigin="0.6,1.423"/>
                    <Button x:Name="btnSafeNewSecondMeal" Content="Speichern" HorizontalAlignment="Left" Margin="110,136,0,0" VerticalAlignment="Top" Width="173" Height="28" Click="btnSafeNewSecondMeal_Click"/>
                    <Button x:Name="btnDeleteMarkedSecondMeal" Content="Auswahl löschen" HorizontalAlignment="Left" Margin="598,136,0,0" VerticalAlignment="Top" Width="173" RenderTransformOrigin="0.32,-0.1" Height="28" Click="btnDeleteMarkedSecondMeal_Click"/>
                </Grid>

            </TabItem>
        </TabControl>
    </Grid>
</Window>
